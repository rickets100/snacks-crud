<div class="container">
  <h1>{{ snack.name }}</h1>
  <a href="/snacks">Back to Main Snack Page</a>
  <hr>
  <div class="row">
    <div class="col-md-2">
      <img src="{{ snack.image_url }}"
        alt="{{ snack.name }}"
        class="image">
    </div>
    <div class="col-md-6">
      <p>Review: {{ snack.review_description }}</p>
      <a href="/snacks/{{ snack.id }}/edit" type="button" name="button" class="btn btn-success"
      id="edit-button">Edit</a>
    </div>
  </div>
</div>
